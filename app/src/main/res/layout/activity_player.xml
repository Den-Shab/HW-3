<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PlayerActivity">

    <EditText
        android:id="@+id/editName"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Name" />

    <EditText
        android:id="@+id/editNation"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Nationality" />

    <EditText
        android:id="@+id/editClub"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Club" />

    <Button
        android:id="@+id/findAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Find all" />

    <Button
        android:id="@+id/addPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5E9C18"
        android:text="Add" />

    <Button
        android:id="@+id/findPlayerByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5E9C18"
        android:text="Find by name" />

    <Button
        android:id="@+id/editPlayersByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5E9C18"
        android:text="Edit by name" />

    <Button
        android:id="@+id/findByNation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#5E9C18"
        android:text="Find by nationality" />

    <Button
        android:id="@+id/deletePlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Delete by name" />

    <ListView
        android:id="@+id/playersListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>