<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.NationActivity">

    <EditText
        android:id="@+id/editName"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Name" />

    <Button
        android:id="@+id/findAllNations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Find all" />

    <Button
        android:id="@+id/addNation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Add" />

    <Button
        android:id="@+id/findNationByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Find by name" />

    <Button
        android:id="@+id/deleteNation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Delete by name" />

    <ListView
        android:id="@+id/nationsListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>