<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ClubActivity">

    <EditText
        android:id="@+id/editClubName"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Name" />

    <EditText
        android:id="@+id/editLocation"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Location"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/findAllClubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Find all" />

    <Button
        android:id="@+id/addClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Add" />

    <Button
        android:id="@+id/findClubByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Find by name" />

    <Button
        android:id="@+id/editClubByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Edit by name" />

    <Button
        android:id="@+id/deleteClub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5E9C18"
        android:text="Delete by name" />

    <ListView
        android:id="@+id/clubListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>